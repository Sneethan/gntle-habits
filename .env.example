# Discord Bot Token (Required)
DISCORD_TOKEN=your_token_here

# Channel ID for reminders and streak board (Required)
REMINDER_CHANNEL_ID=your_channel_id_here

# DeepSeek API Key for task breakdown (Required)
DEEPSEEK_API_KEY=your_deepseek_api_key_here

# OpenWeatherMap API Key for weather forecasts (Required for briefing weather info)
OPENWEATHERMAP_API_KEY=your_openweathermap_api_key_here

# Optional Settings
DB_PATH=gentle_habits.db
MAX_DB_CONNECTIONS=5
STREAK_UPDATE_INTERVAL=5
LOG_LEVEL=INFO

# Timezone Setting (Optional, defaults to UTC)
# Use IANA timezone names (e.g., America/New_York, Europe/London, Asia/Tokyo)
# See full list at: https://en.wikipedia.org/wiki/List_of_tz_database_time_zones
TIMEZONE=UTC

# Affirmation Tone Setting (Optional, defaults to balanced)
# Options: gentle, balanced, firm
AFFIRMATION_TONE=balanced
